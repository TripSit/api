{
	"include": [
		"./src/**/*.ts",
		"./migrations/*.ts",
		"./knexfile.ts"
	],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true, // Set to false later
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "downlevelIteration": false,
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
			"server": ["server"],
			"database": ["database"]
		},
		"typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,                     /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true  /* Disallow inconsistently-cased references to the same file. */
  }
}
