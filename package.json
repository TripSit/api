  "main": "./dist/index.js",
  "scripts": {
    "start": "NODE_ENV=production node node ./dist",
    "dev": "NODE_ENV=development nodemon -w src/**/* -e ts,json --exec 'node --inspect -r ts-node/register src/index.ts'",
    "test": "npm run lint && npm run jest",
    "jest": "NODE_ENV=test jest",
    "lint": "eslint .",
    "migrate:make": "knex --knexfile knexfile.ts -x ts migrate:make",
    "migrate:latest": "knex --knexfile knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile knexfile.ts migrate:rollback"
  },
