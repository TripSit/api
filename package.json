{
  "name": "@tripsit/api",
  "private": true,
  "version": "0.1.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "start": "NODE_ENV=production node node ./dist",
    "dev": "NODE_ENV=development nodemon -w src/**/* -e ts,json --exec 'node --inspect -r ts-node/register src/index.ts'",
    "test": "npm run lint && npm run jest",
    "jest": "NODE_ENV=test jest",
    "lint": "eslint .",
    "migrate:make": "knex --knexfile knexfile.ts -x ts migrate:make",
    "migrate:latest": "knex --knexfile knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile knexfile.ts migrate:rollback"
  },
  "author": "SevenCats <sevencats@tripsit.me>",
  "license": "APL-2",
  "dependencies": {
    "argon2": "^0.27.1",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-joi-validation": "^5.0.0",
    "express-jwt": "^6.0.0",
    "express-promise-router": "^4.0.1",
    "joi": "^17.4.0",
    "knex": "^0.95.4",
    "knex-stringcase": "^1.4.3",
    "pg": "^8.5.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/express": "^4.17.11",
    "@types/express-jwt": "^6.0.1",
    "@types/express-session": "^1.17.3",
    "@types/joi": "^17.2.3",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
